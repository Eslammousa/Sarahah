<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sarahah</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <style>
        body {
            background-color: #f7f9fc;
            font-family: 'Segoe UI', sans-serif;
        }

        .navbar {
            background: #ffffff;
            border-bottom: 1px solid #eaeaea;
            padding: 12px 0;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.45rem;
            color: #00bfa5 !important;
        }

        .nav-link {
            font-weight: 500;
            font-size: 1rem;
            transition: 0.2s ease;
        }

            .nav-link:hover {
                color: #00bfa5 !important;
            }

        .btn-custom {
            background-color: #00bfa5;
            border-color: #00bfa5;
            color: #fff;
            padding: 7px 18px;
            border-radius: 10px;
            font-weight: 600;
            transition: .2s;
        }

            .btn-custom:hover {
                background-color: #009e8d;
                border-color: #009e8d;
            }

        footer {
            margin-top: 80px;
            text-align: center;
            padding: 20px 0;
            color: #777;
            font-size: 0.9rem;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light shadow-sm">
            <div class="container-fluid">

                <!-- Logo -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-chat-heart-fill"></i> Sarahah
                </a>

                <!-- Toggle phone menu -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav ms-auto">

                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <!-- Logged-in User -->
                            <li class="nav-item d-flex align-items-center me-3">
                                <span class="fw-bold text-dark">
                                    <i class="bi bi-person-circle me-1"></i> Hello, @User.Identity.Name
                                </span>
                            </li>

                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout">
                                    <button class="btn btn-danger btn-sm" style="border-radius:10px;">
                                        <i class="bi bi-box-arrow-right"></i> Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <!-- Login -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Login
                                </a>
                            </li>

                            <!-- Register -->
                            <li class="nav-item">
                                <a class="btn btn-custom ms-2" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus-fill"></i> Register
                                </a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
