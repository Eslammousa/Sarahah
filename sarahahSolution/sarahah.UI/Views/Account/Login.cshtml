@model LoginDTO
@{
    ViewBag.Title = "Login";
}

<style>
    body {
        background: #eef1f5;
        font-family: "Segoe UI", sans-serif;
    }

    .login-box {
        max-width: 450px;
        margin: 80px auto;
        background: #ffffff;
        padding: 40px;
        border-radius: 18px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        animation: fadeIn 0.4s ease-in-out;
    }

    .login-title {
        font-size: 30px;
        font-weight: 700;
        text-align: center;
        margin-bottom: 8px;
        color: #222;
    }

    .subtitle {
        text-align: center;
        font-size: 14px;
        color: #666;
        margin-bottom: 25px;
    }

        .subtitle a {
            color: #00bfa6;
            font-weight: 600;
            text-decoration: none;
        }

            .subtitle a:hover {
                text-decoration: underline;
            }

    .form-control {
        height: 48px;
        border-radius: 10px;
        font-size: 15px;
        background: #f9fafb;
        border: 1px solid #d1d5db;
        transition: 0.2s;
    }

        .form-control:focus {
            border-color: #00bfa6;
            background: white;
            box-shadow: 0 0 0 3px rgba(0, 191, 166, 0.15);
        }

    .btn-main {
        background: #00bfa6;
        color: #fff;
        border-radius: 10px;
        height: 50px;
        font-size: 17px;
        font-weight: 600;
        width: 100%;
        margin-top: 10px;
        border: none;
        transition: 0.2s ease-in-out;
    }

        .btn-main:hover {
            background: #009e8d;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 191, 166, 0.3);
        }

    .text-danger {
        font-size: 13px;
        margin-top: 5px;
        display: block;
    }

    label {
        font-weight: 600;
        margin-bottom: 5px;
        color: #444;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(15px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>


<div class="login-box">

    <h2 class="login-title">Welcome Back</h2>
    <p class="subtitle">
        Don't have an account?
        <a asp-action="Register" asp-controller="Account">Create one</a>
    </p>

    <!-- Show Model-Level Errors (Wrong password, user not found, etc) -->
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <form asp-action="Login" method="post">

        <!-- Email -->
        <div class="mb-3">
            <label>UserName</label>
            <input asp-for="UserName" class="form-control" placeholder="username" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <!-- Password -->
        <div class="mb-3">
            <label>Password</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Your password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-main">Login</button>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
