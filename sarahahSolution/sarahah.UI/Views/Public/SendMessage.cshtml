@{
    ViewData["Title"] = "Send Message";
    var username = Model as string;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<style>
    body {
        background: #f2f5f9;
        font-family: "Segoe UI", sans-serif;
    }

    .send-card {
        animation: fadeIn 0.4s ease-out;
        border-radius: 20px;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .textarea-custom {
        resize: none;
        border-radius: 14px;
        padding: 15px;
        background: #f9fafb;
        border: 1px solid #d1d5db;
        transition: 0.2s;
    }

        .textarea-custom:focus {
            border-color: #3b82f6;
            box-shadow: 0 0 5px rgba(59,130,246,0.3);
        }

    .char-counter {
        font-size: 13px;
        color: #6b7280;
    }
</style>

<div class="container" style="max-width: 650px; margin-top: 60px;">

    <!-- Header -->
    <div class="text-center mb-4">
        <h2 class="fw-bold">
            Send a Message to <span class="text-primary">@username</span>
        </h2>

        <p class="text-muted">
            <img src="https://cdn-icons-png.flaticon.com/512/456/456212.png"
                 width="22" style="margin-top:-4px; margin-right:6px;">
            Your message will stay 100% anonymous
        </p>
    </div>

    <!-- Success message -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success text-center fw-semibold shadow-sm">
            @TempData["Success"]
        </div>
    }

    <!-- Card -->
    <div class="card shadow-sm p-4 border-0 send-card">

        <form method="post" action="/@username">

            <div class="mb-3">
                <label class="form-label fw-semibold">Your Message</label>

                <textarea name="Content" id="msgBox"
                          class="form-control textarea-custom"
                          rows="7" maxlength="500"
                          placeholder="Write your message here..."
                          required></textarea>

                <div class="d-flex justify-content-between mt-1">
                    <span class="char-counter">
                        <span id="charCount">0</span>/500
                    </span>
                </div>
            </div>

            <button type="submit"
                    class="btn btn-primary w-100 py-2 fw-bold rounded-3">
                Send Message
            </button>
        </form>
    </div>

    <!-- Back -->
    <div class="text-center mt-4">
        <a href="/" class="text-decoration-none text-secondary">Back to Home</a>
    </div>
</div>

<script>
    // Live character counter
    const msgBox = document.getElementById("msgBox");
    const charCount = document.getElementById("charCount");

    msgBox.addEventListener("input", function () {
        charCount.textContent = msgBox.value.length;
    });
</script>
